
function initMap(paramGeos, group, price, minstay, accomodate,roomtype,lat,lng,predict,check,
		countMinstay,countAccomodate,predictRoomType,bedroom,bathroom,countBedroom,countbathroom) {
	zIndex = paramGeos.length;
	var map = new google.maps.Map(document.getElementById('map'), {
		center: {lat: 37.550917, lng: 126.990835},
		zoom: 12
	});
	var bedrooms = bedroom;
	var bathrooms = bathroom;
	var countBedrooms = countBedroom;
	var countbathrooms = countbathroom;
	var preMinstay = countMinstay;
	var preAccomo = countAccomodate;
	var preRoom = predictRoomType;
	var roomtypes = roomtype;
	var groups = group;
	var geos = paramGeos;
	var prices = price;
	var minstays = minstay;
	var accomodates = accomodate;
	var lats = lat;
	var lngs = lng;
	var predicts = predict;
	var checks = check;
	setMarkers(map, geos, groups, prices, minstays, accomodates, roomtypes,bedrooms,bathrooms);
	if(checks == 1){
	predictMarker(map,lats,lngs,predicts,preMinstay,preAccomo,preRoom,countBedrooms,countbathrooms);
	}
}

function predictMarker(map,lats,lngs,predicts,preMinstay,preAccomo,preRoom,countBedrooms,countbathrooms){
	var bedroom = countBedrooms;
	var bathroom = countbathrooms;
	var lat = lats;
	var lng = lngs;
	var predict = predicts;
	var predict_M = preMinstay;
	var predict_A = preAccomo;
	var predict_R = preRoom;
	map.setCenter({lat: lat , lng: lng});
	map.setZoom(14);
	var pinIcon = new google.maps.MarkerImage(
		      "image/mainmarker.png",
		      null, /* size is determined at runtime */
		      null, /* origin is 0,0 */
		      null, /* anchor is bottom center of the scaled image */
		      new google.maps.Size(60, 60));
	 var marker = new google.maps.Marker({
	      position: {lat: lat, lng: lng},
	      map: map,
	      zIndex: zIndex,
	      icon: pinIcon
	   });
	var infowindow = new google.maps.InfoWindow({maxWidth : 220});
	infowindow.setContent("  ㆍPrice : $" + numberFormat(predict)+"<br>" + " ㆍBedroom : "+bedroom+"<br>"+
			" ㆍBathroom : "+bathroom+"<br>"+" ㆍMinstay : "+
	    predict_M +"<br>" +" ㆍAccomodate : "+predict_A +"<br>" +" ㆍRoomtype : " + predict_R);
	infowindow.open(map, marker);
	
	google.maps.event.addListener(marker,'click',function(){
		infowindow.open(map, marker);
	});
	
}

function numberFormat(inputNumber) {
	   return inputNumber.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
	}

function setMarkers(map, geos, groups, prices, minstays, accomodates,roomtypes,bedrooms,bathrooms) {
	
	var icons = {
		group_1: {
			icon: 'image/marker1.png',
		},
		group_2: {
			icon: 'image/marker2.png',
		},
		group_3: {
			icon: 'image/marker3.png',
		}
	};

	for (var i = 0; i < geos.length; i++) {
		var bedroom = bedrooms[i];
		var bathroom = bathrooms[i];
		var geo = geos[i];
		var roomtype = roomtypes[i]
		var group = groups[i];
		var price = prices[i];
		var minstay = minstays[i];
		var accomodate = accomodates[i];
		var marker = new google.maps.Marker({
			position: {
				lat: geo[0],
				lng: geo[1]
			},
			map: map,
			title: "  ㆍPrice : $" + numberFormat(price) + "\nㆍBedroom : "+bedroom+"\nㆍBathroom : "+bathroom+"\nㆍMinstay : "+ minstay +
			"\nㆍAccomodate : "+accomodate +"\nㆍRoomtype : " + roomtype,
			icon: icons[group].icon
		});
	}
}