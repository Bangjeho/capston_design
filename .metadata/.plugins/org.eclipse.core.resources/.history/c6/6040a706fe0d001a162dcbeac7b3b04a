		Label num_of_room2 = new Label("개");
		num_of_room2.getElement().getStyle().setMarginTop(20, Unit.PX);
		num_of_room2.getElement().getStyle().setMarginLeft(5, Unit.PX);
		num_of_room2.getElement().getStyle().setFontSize(0.5, Unit.CM);
